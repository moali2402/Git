<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

     <style name="ProgressButton">
  </style>
 
  <style name="ProgressButton.Clickable">
    <!-- A styled progress button !-->
    <!-- You can also change the drawables (pinned, unpinned and/or shadow) !-->
    <!-- <item name="pinnedDrawable">@drawable/pinned_custom</item> !-->
    <item name="circleColor">@color/TextColor</item>
    <item name="progressColor">@color/green</item>
  </style>

      <style name="AppTheme" parent="AppBaseTheme">
          
          
          
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    
    	<item name="circularProgressBarStyle">@style/CircularProgressBar</item>
    </style>
    

      <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">18sp</item>
        <item name="android:divider">@drawable/splitter</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>
             <item name="android:cacheColorHint">@android:color/black</item>
        
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:textColor">@color/TextColor</item>
    </style>
    
</resources>
