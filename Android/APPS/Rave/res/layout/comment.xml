<?xml version="1.0" encoding="utf-8"?>
<dev.vision.rave.NewsAnimationLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <dev.vision.rave.views.SquareImageView    
        android:id="@+id/commentImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp" />
    
    <TextView
        android:id="@+id/commentBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/commentImage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</dev.vision.rave.NewsAnimationLayout>
