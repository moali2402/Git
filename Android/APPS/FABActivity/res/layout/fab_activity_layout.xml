<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:fab="http://schemas.android.com/apk/res-auto"
		style="@style/fab_layout_match_width_match_height_style"
		>
	<ScrollView
			android:id="@+id/fab_activity_scroll_view"
			style="@style/fab_layout_match_width_match_height_style"
			android:fillViewport="true"
			>
		<include layout="@layout/fab_components_layout" />
	</ScrollView>		
	
	<com.software.shell.fab.ActionButton
	    android:id="@+id/fab_activity_action_button"
	    style="@style/fab_action_button_style"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:onClick="onActionButtonClick"
	    fab:type="DEFAULT" />

</RelativeLayout>

