<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <com.todddavies.components.progressbar.ProgressWheel
        android:id="@+id/progressBarTwo"
        android:layout_width="240dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        ProgressWheel:barColor="#339BB9"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barWidth="20dp"
        ProgressWheel:rimColor="#44000000"
        ProgressWheel:rimWidth="20dp"
        ProgressWheel:spinSpeed="3dp"
        ProgressWheel:text="Click\none of the\nbuttons"
        ProgressWheel:textColor="#339BB9"
        ProgressWheel:textSize="16sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBarTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Something Cool is coming here\n\nOUR PROGRESS"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarTwo"
        android:layout_centerHorizontal="true"
        android:text="Stay Tuned" />
    
</RelativeLayout>