<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ff8380"
       	android:fitsSystemWindows="true">

	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFF">
	
	    <RelativeLayout
	        android:id="@+id/RelativeLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <LinearLayout
	            android:id="@+id/linearLayout1"
	            android:layout_width="fill_parent"
	            android:layout_height="60dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:background="#FFFFFF"
	            android:divider="@drawable/ofback"
	            android:dividerPadding="10dp"
	            android:orientation="horizontal"
	            android:showDividers="middle" >

	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:gravity="center" >

	                <TextView
	                    android:id="@+id/TextView05"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_above="@+id/TextView04"
	                    android:gravity="center"
	                    android:text="401"
	                    android:textAppearance="?android:attr/textAppearanceLarge"
	                    android:textSize="16sp"
	                    android:textStyle="bold" />

	                <TextView
	                    android:id="@+id/TextView04"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:gravity="center"
	                    android:text="Days Together"
	                    android:textSize="12sp" />
	            </RelativeLayout>

	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:gravity="center" >

	                <TextView
	                    android:id="@+id/TextView08"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_above="@+id/TextView09"
	                    android:gravity="center"
	                    android:text="54"
	                    android:textAppearance="?android:attr/textAppearanceLarge"
	                    android:textSize="16sp"
	                    android:textStyle="bold" />

	                <TextView
	                    android:id="@+id/TextView09"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:gravity="center"
	                    android:text="Gift Since"
	                    android:textSize="12sp" />
	            </RelativeLayout>

	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:gravity="center" >

	                <TextView
	                    android:id="@+id/TextView06"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_above="@+id/TextView07"
	                    android:gravity="center"
	                    android:text="912"
	                    android:textAppearance="?android:attr/textAppearanceLarge"
	                    android:textSize="16sp"
	                    android:textStyle="bold" />

	                <TextView
	                    android:id="@+id/TextView07"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:gravity="center"
	                    android:text="Message Sent"
	                    android:textSize="12sp" />
	            </RelativeLayout>

	            <RelativeLayout
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_weight="1"
	                android:gravity="center" >

	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_alignParentRight="true"
	                    android:gravity="center" >

	                    <TextView
	                        android:id="@+id/TextView11"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:gravity="center"
	                        android:text="64"
	                        android:textAppearance="?android:attr/textAppearanceLarge"
	                        android:textColor="#ff6e6b"
	                        android:textSize="20sp"
	                        android:textStyle="bold" />

	                    <TextView
	                        android:id="@+id/TextView10"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginLeft="2dp"
	                        android:gravity="center_vertical"
	                        android:text="Days"
	                        android:textSize="12sp" />
	                </LinearLayout>

	                <TextView
	                    android:id="@+id/TextView12"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:gravity="center"
	                    android:text="until her b-day"
	                    android:textSize="12sp" />
	            </RelativeLayout>
	        </LinearLayout>

	        <ImageView
	            android:id="@+id/imageView1"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_alignBottom="@+id/textView2"
	            android:layout_below="@id/linearLayout1"
	            android:layout_marginLeft="-20dp"
	            android:layout_toRightOf="@+id/imageView2"
	            android:scaleType="fitCenter" />

	        <ImageView
	            android:id="@+id/imageView2"
	            android:layout_width="170dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/linearLayout1"
	            android:layout_marginTop="-10dp"
	            android:adjustViewBounds="true"
	            android:src="@drawable/logore" />

	        <Button
	            android:id="@+id/button1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/textView1"
	            android:layout_alignRight="@+id/textView1"
	            android:layout_below="@+id/textView1"
	            android:layout_marginTop="10dp"
	            android:background="@drawable/delight_back"
	            android:drawableLeft="@drawable/cart"
	            android:minHeight="35dp"
	            android:padding="5dp"
	            android:text="Delight her"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold" />

	        <Button
	            android:id="@+id/Button02"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/button1"
	            android:layout_alignRight="@+id/button1"
	            android:layout_below="@+id/button1"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/save_back"
	            android:drawableLeft="@drawable/like"
	            android:drawablePadding="3dp"
	            android:minHeight="35dp"
	            android:paddingBottom="2dp"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="2dp"
	            android:text="Save for later"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold" />

	        <Button
	            android:id="@+id/Button01"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/Button02"
	            android:layout_alignRight="@+id/Button02"
	            android:layout_below="@+id/Button02"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/notforher_back"
	            android:drawableLeft="@drawable/unlike"
	            android:drawablePadding="4dp"
	            android:minHeight="35dp"
	            android:paddingBottom="2dp"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="2dp"
	            android:text="Not for her"
	            android:textColor="#FFFFFF"
	            android:textStyle="bold" />

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/TextView01"
	            android:layout_alignRight="@+id/TextView01"
	            android:layout_below="@+id/TextView01"
	            android:layout_marginTop="5dp"
	            android:gravity="center"
	            android:textSize="14sp" />

	        <TextView
	            android:id="@+id/TextView01"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/imageView2"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="25dp"
	            android:layout_marginTop="10dp"
	            android:layout_toLeftOf="@+id/imageView1"
	            android:gravity="center"
	            android:textSize="14sp"
	            android:textStyle="bold" />
	        
	        <RelativeLayout
	            android:id="@+id/relativeLayout2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="false"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentRight="true"
	            android:layout_below="@+id/imageView1"
	            android:visibility="gone" >

	            <dev.vision.relationshipninjas.views.UnderlineTextView
	                android:id="@+id/textView3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:layout_marginLeft="15dp"
	                android:layout_marginTop="10dp"
	                android:text="Description" />

	            <TextView
	                android:id="@+id/textView4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/textView3"
	                android:layout_alignParentRight="true"
	                android:layout_below="@+id/textView3"
	                android:layout_marginTop="10dp"
	                android:textAppearance="?android:attr/textAppearanceSmall" />

	            <dev.vision.relationshipninjas.views.UnderlineTextView
	                android:id="@+id/textView5"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/textView4"
	                android:layout_below="@+id/textView4"
	                android:layout_marginTop="10dp"
	                android:text="Ninja Guidence" />

	            <TextView
	                android:id="@+id/textView6"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/textView5"
	                android:layout_below="@+id/textView5"
	                android:layout_marginTop="10dp"
	                android:textAppearance="?android:attr/textAppearanceSmall" />

	            <dev.vision.relationshipninjas.views.UnderlineTextView
	                android:id="@+id/textView7"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/textView6"
	                android:layout_below="@+id/textView6"
	                android:layout_marginTop="10dp"
	                android:text="Reviews" />

	            <ListView
	                android:id="@+id/listView1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/textView7"
	                android:layout_below="@+id/textView7"
	                android:layout_marginTop="10dp" >
	            </ListView>
	        </RelativeLayout>

	        <dev.vision.relationshipninjas.views.ExpandableHeightGridView
	            android:id="@+id/gridView1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/relativeLayout2"
	            android:layout_margin="10dp"
	            android:numColumns="3"
	            android:visibility="visible" 
	            android:gravity="center"
			    android:horizontalSpacing="2dp"
			    android:isScrollContainer="false"
			    android:stretchMode="columnWidth"
			    android:verticalSpacing="5dp"/>

	        <TextView
	            android:id="@+id/textView8"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/Button01"
	            android:layout_below="@+id/Button01"
	            android:layout_marginTop="5dp"
	            android:text="Chic" />

	        <dev.vision.relationshipninjas.views.Feedback
	            android:id="@+id/RatingBar01"
	            style="@style/myRatingBar"
	            android:layout_width="65dp"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/textView8"
	            android:layout_alignLeft="@+id/RatingBar02"
	            android:layout_alignRight="@+id/RatingBar02"
	            android:layout_alignTop="@+id/textView8"
	            android:max="5"
	            android:minHeight="15dp"
	            android:numStars="5"
	            android:progress="2"
	            android:stepSize="1" />

	        <TextView
	            android:id="@+id/TextView02"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/textView8"
	            android:layout_below="@+id/textView8"
	            android:text="Charm" />

	        <dev.vision.relationshipninjas.views.Feedback
	            android:id="@+id/RatingBar02"
	            style="@style/myRatingBar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/TextView02"
	            android:layout_alignLeft="@+id/RatingBar03"
	            android:layout_alignRight="@+id/RatingBar03"
	            android:layout_alignTop="@+id/TextView02"
	            android:max="5"
	            android:minHeight="15dip"
	            android:numStars="5"
	            android:progress="2"
	            android:stepSize="1" />

	        <TextView
	            android:id="@+id/TextView03"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/TextView02"
	            android:layout_below="@+id/TextView02"
	            android:text="Shock" />

	        <dev.vision.relationshipninjas.views.Feedback
	            android:id="@+id/RatingBar03"
	            style="@style/myRatingBar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@+id/TextView03"
	            android:layout_alignLeft="@+id/ratingBar1"
	            android:layout_alignRight="@+id/ratingBar1"
	            android:layout_alignTop="@+id/TextView03"
	            android:max="5"
	            android:minHeight="15dip"
	            android:numStars="5"
	            android:progress="2"
	            android:stepSize="1" />

	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/TextView03"
	            android:layout_below="@+id/TextView03"
	            android:text="Reviews"
	            android:visibility="invisible" />

	        <TextView
	            android:id="@+id/imageView3"
	            android:layout_width="35dp"
	            android:layout_height="30dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignTop="@+id/imageView1"
	            android:layout_marginRight="3dp"
	            android:layout_marginTop="3dp"
	            android:background="@drawable/likes"
	            android:gravity="center"
	            android:text="99+"
	            android:textColor="#FFFFFF"
	            android:textSize="12sp" />

	        <ImageView
	            android:id="@+id/imageView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_below="@+id/linearLayout1"
	            android:src="@drawable/suggested" />

	        <RatingBar
	            android:id="@+id/ratingBar1"
	            style="@style/myRatingBar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignRight="@+id/Button01"
	            android:layout_alignTop="@id/textView2"
	            android:clickable="false"
	            android:max="5"
	            android:maxHeight="10dp"
	            android:minHeight="15dip"
	            android:numStars="5"
	            android:progress="0"
	            android:stepSize="1"
	            android:visibility="invisible" />

	        <dev.vision.relationshipninjas.views.UnderlineTextView
	            android:id="@+id/textView9"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/textView2"
	            android:layout_alignRight="@+id/ratingBar1"
	            android:layout_below="@+id/TextView03"
	            android:gravity="center"
	            android:text="More Details"
	            android:visibility="visible" />
	       
	    </RelativeLayout>
	
	</ScrollView>
</RelativeLayout>