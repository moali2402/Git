<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b3440"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/logors" />

    <EditText
        android:id="@+id/email_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="15dp"
        android:ems="15"
        android:hint="Email Address"
        android:textColor="@android:color/white" android:inputType="textEmailAddress"/>

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#322c36"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_above="@+id/signup"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@drawable/fbback"
            android:drawableLeft="@drawable/fbibi"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Login with Facebook"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <dev.vision.relationshipninjas.views.UnderlineTextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sign Up for The Relationship Ninjas"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_add"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/login_selector"
        android:minHeight="40dp"
        android:minWidth="70dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Send"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/cancel_selector"
        android:minHeight="40dp"
        android:minWidth="70dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Cancel"
        android:textColor="#282828"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="Password Recovery"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_add"
        android:layout_alignLeft="@+id/email_add"
        android:layout_alignRight="@+id/email_add"
        android:layout_below="@+id/textView1"
        android:gravity="center"
        android:text="To reset your password, enter the email address you use to sign in to The Relationship Ninjas"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
   
</RelativeLayout>