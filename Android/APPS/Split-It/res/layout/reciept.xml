<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/dev.vision.split.it"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="dev.vision.restaurant.GillsansTextView.MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bgconsumers" />

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bar" >

        <dev.vision.split.it.extras.GillsansTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:drawableLeft="@android:drawable/arrow_up_float"
            android:drawablePadding="5dp"
            android:text="Cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imageView3"
        android:layout_below="@+id/ImageView02"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#fff"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="35dp" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_alignParentTop="true"
            android:scrollbarStyle="outsideOverlay" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/hListView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/view1"
                    android:divider="@null"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:scrollbars="none"
                    app:hlv_dividerWidth="0dp" >
                </it.sephiroth.android.library.widget.HListView>

                <View
                    android:id="@+id/View01"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/hListView1"
                    android:background="@android:color/darker_gray" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/View01"
                    android:layout_marginTop="15dp"
                    android:text="Bill Total:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView1"
                    android:text="L.E 249.00"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="15dp"
                    android:text="Remaining:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TextView02"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/TextView02"
                    android:text="L.E 83.00"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView02"
                    android:layout_below="@+id/TextView02"
                    android:layout_marginTop="15dp"
                    android:text="Your Share:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TextView03"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/TextView03"
                    android:text="L.E 43.25"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                
                <LinearLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView03"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >
                
	                <TextView
	                    android:id="@+id/tooltip"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/seek_text_back"
	                    android:gravity="center"
	                    android:paddingBottom="1dp"
	                    android:paddingLeft="5dp"
	                    android:paddingRight="5dp"
	                    android:paddingTop="1dp"
	                    android:text="0"
	                    android:textAppearance="?android:attr/textAppearanceSmall"
	                    android:textColor="@android:color/white"
	                    android:textSize="12sp"
	                    android:textStyle="bold" />
	
	                <SeekBar
	                    android:id="@+id/seekBar1"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="15dp"
	                    android:layout_marginRight="15dp"
	                    android:progressDrawable="@drawable/apptheme_scrubber_progress_horizontal_holo_light"
	                    android:thumb="@drawable/apptheme_scrubber_control_selector_holo_light" />

	                <dev.vision.split.it.extras.RangeSeekBar
	                    android:id="@+id/rangeseek"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:visibility="gone"
	                    app:singleThumb="true" />

                </LinearLayout>
                
                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/rel"
                    android:layout_marginTop="15dp"
                    android:text="Tip:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ImageView01"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/ImageView01"
                    android:text="L.E 4.33"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TextView06"
                    android:layout_alignTop="@+id/TextView06"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/TextView06"
                    android:src="@drawable/minus" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_alignTop="@+id/imageView1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="%10"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TextView07"
                    android:layout_alignTop="@+id/TextView07"
                    android:layout_toRightOf="@+id/TextView07"
                    android:src="@drawable/plus" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/TextView06"
                    android:layout_marginTop="15dp"
                    android:text="Split-It Credit:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TextView09"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/TextView09"
                    android:text="L.E 0.00"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/TextView09"
                    android:layout_marginTop="15dp"
                    android:text="Payable:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <dev.vision.split.it.extras.GillsansTextView
                    android:id="@+id/TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/TextView11"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/TextView11"
                    android:text="L.E 47.58"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/pay_m_clicked" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/receipt_bottom" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_below="@+id/bar"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/receipt_top" />

</RelativeLayout>